<% unless current_user %> 
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% else %>
  <%= current_user[:name] %>


  <p id="notice"><%= notice %></p>

  <h1>Bookmarks</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= bookmark.name %></td>
          <td><%= bookmark.url %></td>
          <td><%= link_to 'Show', bookmark %></td>
          <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
          <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <table>
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= link_to friend.name, friend %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Bookmark', new_bookmark_path %>


  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>

